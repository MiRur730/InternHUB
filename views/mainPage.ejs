<%- include("./layouts/Showheader.ejs")  %>
 <!-- Page Content-->
 <div class="container px-4 px-lg-5">


  <% if(posts.length >0) { 
    
    for(let i=0; i<posts.length ;i++){ %>

        
        <div class="card post" style="width: 40rem; margin-left:250px " >
          <style>
            .card:hover {
              transform: scale(1.03);
              transition: all 0.3s ease-in-out;
              box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            }
          </style>
           <!-- <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="https://dummyimage.com/900x400/dee2e6/6c757d.jpg" alt="..." /></div> -->
           <div class="card-body post">
               <h1 class="card-title post"><%=posts[i].title %></h1>
               <p class="card-text"><%=posts[i].content %></p>
               <a class="btn btn-primary" href="/post/posts/<%=posts[i]._id %>">Read more!</a>
           </div>
       </div>
    <%}
    
    
    %>





  <%} 
  else { %>
    <h1>Posts not available !</h1>
  <%}%>



   


